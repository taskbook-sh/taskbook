FROM rust:1.91.1-bookworm AS builder

WORKDIR /app

COPY Cargo.toml Cargo.lock ./
COPY crates/ crates/

RUN cargo build --release --package taskbook-client

FROM debian:bookworm-slim

RUN apt-get update && apt-get install -y ca-certificates && rm -rf /var/lib/apt/lists/*

COPY --from=builder /app/target/release/tb /usr/local/bin/tb

# Create taskbook directory
RUN mkdir -p /root/.taskbook

WORKDIR /root

CMD ["bash"]
